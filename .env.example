# .env - Variables de Entorno
# Copiar este archivo como .env y rellenar los valores

# Configuración del servidor
NODE_ENV=development
PORT=3001

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoice_management
DB_USER=invoice_user
DB_PASSWORD=your-db-password

# Twilio (para OCR service y notificaciones)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=+1234567890

# OpenAI (para servicios de IA)
OPENAI_API_KEY=your-openai-api-key

# Google Vision (para OCR)
GOOGLE_APPLICATION_CREDENTIALS=./config/google-vision-credentials.json
GOOGLE_VISION_API_KEY=your-google-vision-key

# JWT para autenticación (generar random string)
JWT_SECRET=your-jwt-secret-very-secure-here
JWT_EXPIRES_IN=24h

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-dashboard.vercel.app

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# # Email notifications (opcional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# URLs externas
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001

# n8n integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key
